<div class="container">
  <div class="card-element">
    <div class="d-flex justify-content-center">
      <div class="elements-<%= @element.category.delete(',').delete(' ') %> element-show">
        <div class="d-flex justify-content-between">
          <div class="left-side">
            <div class="element-show-small-number"><%= @element.number %></div>
            <div class="element-show-big"><%= @element.symbol %></div> 
            <div class="element-show-small"><%= @element.name %></div>
            <div class="element-show-small"><%= @element.atomic_mass %></div>
          </div>
          <div class="right-side">
            <div class="element-show-ext-small"><%= @element.shells.join(' ') %></div>
          </div>
        </div>
      </div>
    </div>
    <table class="table table-bordered table-dark text-center mt-3">
      <thead>
        <tr>
          <th scope="col">Atomic Mass</th>
          <th scope="col">Boil</th>
          <th scope="col">Category</th>
          <th scope="col">Density</th>
          <th scope="col">Discovered by</th>
          <th scope="col">Melt</th>
          <th scope="col">Molar Heat</th>
          <th scope="col">Number</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @element.atomic_mass %></td>
          <td><%= @element.boil == nil ? '-' : @element.boil %></td>
          <td><%= @element.category %></td>
          <td><%= @element.density %></td>
          <td><%= @element.discovered_by %></td>
          <td><%= @element.melt == nil ? '-' : @element.melt %></td>
          <td><%= @element.molar_heat == nil ? '-' : @element.molar_heat %></td>
          <td><%= @element.number %></td>
        </tr>
      </tbody>
    </table>

    <table class="table table-bordered table-dark text-center">
      <thead>
        <tr>
          <th scope="col">Phase</th>
          <th scope="col">Symbol</th>
          <th scope="col">Shells</th>
          <th scope="col">Electron configuration</th>
          <th scope="col">Electron Configuration Semantic</th>
          <th scope="col">Electron Affinity</th>
          <th scope="col">Electronegativity Pauling</th>
          <th scope="col">Ionization Energies</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @element.phase %></td>
          <td><%= @element.symbol %></td>
          <td><%= @element.shells.kind_of?(Array) ? @element.shells.join(', ') : @element.shells %></td>
          <td><%= @element.electron_configuration %></td>
          <td><%= @element.electron_configuration_semantic %></td>
          <td><%= @element.electron_affinity == nil ? '-' : @element.electron_affinity %></td>
          <td><%= @element.electronegativity_pauling == nil ? '-' : @element.electronegativity_pauling %></td>
          <td><%= @element.ionization_energies.kind_of?(Array) ? @element.ionization_energies.join(' - ') : '-' %></td>
        </tr>
      </tbody>
    </table>
    <div>
      <h4 class="text-center mb-2">Summary</h4>
      <div class="card-atribute">
        <p><%= @element.summary %></p>
      </div>
      <h4 class="text-center mb-2">Appearance</h4>
      <div class="card-atribute">
        <%= @element.appearance %>
      </div>
      <div class="text-center mt-4">
        <%= link_to "More Information", @element.source, class: 'button-transparent', target: "_blank" %>
      </div>
    </div>
  </div>
</div>
